<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<xs:schema version="1.0" targetNamespace="http://www.w3.org/2001/episode" xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:complexType name="episode">
        <xs:sequence>
            <xs:element name="name" type="xs:string" minOccurs="0"/>
            <xs:element name="showDate" type="xs:string" minOccurs="0"/>
            <xs:element name="episodeNumber" type="xs:string" minOccurs="0"/>
        </xs:sequence>
        <xs:attribute name="id" type="xs:int" use="required"/>
    </xs:complexType>
</xs:schema>